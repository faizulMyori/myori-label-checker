{
  "name": "myori-label-checker",
  "productName": "myori-label-checker",
  "version": "1.0.0",
  "description": "myori-label-checker",
  "main": ".vite/build/main.js",
  "build": {
    "appId": "com.myori.label-checker",
    "productName": "MyORI Label Checker",
    "files": [
      ".vite/build/**/*",
      ".vite/renderer/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "faizulMyori",
        "repo": "myori-label-checker"
      }
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    },
    "asar": true
  },
  "private": true,
  "scripts": {
    "dev": "node dev-scripts/dev.js",
    "dev:better": "cross-env USE_BETTER_SQLITE=true node dev-scripts/dev.js",
    "start": "electron .",
    "start:better": "cross-env USE_BETTER_SQLITE=true electron .",
    "build": "npm run build:all",
    "build:main": "vite build -c vite.main.config.ts",
    "build:preload": "vite build -c vite.preload.config.ts",
    "build:renderer": "vite build -c vite.renderer.config.ts",
    "build:all": "npm run build:main && npm run build:preload && npm run build:renderer",
    "package": "electron-builder build --dir",
    "dist": "electron-builder build",
    "dist:win": "electron-builder build --win",
    "dist:mac": "electron-builder build --mac",
    "dist:linux": "electron-builder build --linux",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "test:all": "vitest run && playwright test"
  },
  "author": "Faizul <faizul@myori.my>",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^1.2.6",
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.50.1",
    "@tailwindcss/postcss": "^4.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^22.13.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/react-window": "^1.8.8",
    "@types/winston": "^2.4.4",
    "cross-env": "^7.0.3",
    "electron": "34.0.2",
    "electron-builder": "^26.0.16",
    "electron-devtools-installer": "^4.0.0",
    "electron-playwright-helpers": "^1.7.1",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-compiler": "^19.0.0-beta-714736e-20250131",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "postcss": "^8.5.1",
    "prettier": "^3.5.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.11",
    "vitest": "^3.0.4"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^11.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.7",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-label": "^2.1.3",
    "@radix-ui/react-navigation-menu": "^1.2.6",
    "@radix-ui/react-popover": "^1.1.7",
    "@radix-ui/react-progress": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.7",
    "@radix-ui/react-slider": "^1.2.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.1.4",
    "@radix-ui/react-tabs": "^1.1.4",
    "@radix-ui/react-toggle": "^1.1.3",
    "@radix-ui/react-toggle-group": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-query": "^5.66.0",
    "@tanstack/react-router": "^1.99.0",
    "@tanstack/router-devtools": "^1.99.0",
    "@vitejs/plugin-react": "^4.3.4",
    "babel-plugin-react-compiler": "^19.0.0-beta-714736e-20250131",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.10.0",
    "check-disk-space": "^3.4.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "i18next": "^24.2.2",
    "lucide-react": "^0.475.0",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.0",
    "react-virtualized-auto-sizer": "^1.0.26",
    "react-window": "^1.8.11",
    "serialport": "^10.3.0",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1",
    "electron-updater": "^6.6.5"
  }
}